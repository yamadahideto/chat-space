.chat-side
  .chat-side-header
    .chat-side-header__box
      %h3.chat-side-header__box__user-name
        = current_user.name
      %ul.chat-side-header__box__menu
        %li.left
          = link_to new_group_path do
            %i.far.fa-edit
        %li.right
          = link_to edit_user_path(current_user) do
            %i.fas.fa-cog

  .chat-side__groups
    - current_user.groups.each do |group|
      .chat-side__groups-group
        = link_to group_messages_path(group) do
          .chat-side__groups-group__name
            = group.name
            .chat-side__groups-group__message
              = group.show_last_message
